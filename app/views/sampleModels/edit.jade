extends ../shared/template

block content
  .row
    .small-12.columns
        form(action='/sampleModels/update/' + sampleModel._id.toString(), method='post', enctype='multipart/form-data')
          fieldset
            legend Edit Sample Model
              label Whatever
              input(name='whatever', type='text', value=sampleModel.whatever)
              label Upload an Image
              input(name='imageFile', type='file')
              input(name='userId', type='hidden', value=sampleModel.userId)
              input(name='id', type='hidden', value=sampleModel._id.toString())
              button Update
